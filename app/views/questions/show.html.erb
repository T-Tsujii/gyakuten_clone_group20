<div class="title">
  <h3>【質問】</h3>
  <%= markdown(@question.title).html_safe %>
  <hr>
</div>
<div class="detail">
  <h3>【詳細】</h3>
  <%= markdown(@question.detail).html_safe %>
  <hr>
</div>


<div class="detail">
  <% @solutions.each.with_index(1) do |solution, index| %>
    <h3>【回答<%= index %>】</h3>
    <%= markdown(solution.detail).html_safe %>
  <% end %>
</div>

<h2>回答投稿</h2>
<%= form_with(model:[@question, @solution],local: true, data: {confirm: "投稿しますか？"}) do |form| %>
  <div class="form-group">
      <%= form.label :detail, "【回答】" %>
      <%= form.text_area :detail, class: 'form-control', rows: "5" %>
  </div>
  <div class="form-group">
      <%= form.submit "送信", class: 'btn btn-primary btn-block' %>
  </div>
<% end %>
