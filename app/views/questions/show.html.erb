<div class="title">
  <h3>【質問】</h3>
  <%= markdown(@question.title).html_safe %>
  <hr>
</div>
<div class="detail">
  <h3>【詳細】</h3>
  <%= markdown(@question.detail).html_safe %>
  <hr>
</div>


<div class="detail">
  <% @solutions.each do |solution| %>
    <h3>【回答】</h3>
    <%= solution.detail %>
    <hr>
  <% end %>
</div>

<h1>回答投稿</h1>
<%= form_with(model:[@question, @solution],local: true) do |form| %>
  <div class="form-group">
      <%= form.label :detail, "【回答】" %>
      <%= form.text_area :detail, class: 'form-control', rows: "5" %>
  </div>
  <div class="form-group">
      <%= form.submit "送信", class: 'btn btn-primary btn-block' %>
  </div>
<% end %>
